
.cardBG {
  background-color: #ffffff;
  border-radius: 10px;
  border-width: 0.1px;
  border-color: transparent;
  border-style: solid;
  width: 90%;
  height: 161px;
  margin-top: 17px;
  display: flex;
}

.cardPic {
  border-radius: 4px;
  width: 92px;
  height: 128px;
  margin-top: 16.5px;
  margin-left: 17px;
}

.cardTextContainer {
  margin-top: 16.5px;
  width: 70%;
  height: 128px;
}

.cardTitle {
  margin-top: 0px;
  margin-left: 12px;
  font-size: 20px;
  font-weight: bold;
  height: 54px;
  color: #383838;
}

.cardSubtitle {
  font-size: 18px;
  color: #383838;
  margin-top: 0px;
  margin-left: 12px;
}

.cardBtnArea {
  height: 30px;
  margin-top: 5px;
  margin-left: 12px;
  display: flex;
}

.cardShareButton {
  /* margin-left: 10px; */
  width: 101px;
  height: 30px;
  border-radius: 15px;
  line-height: 30px;
  text-align:center;
  background:-webkit-linear-gradient(left,#E852A4,#FF313A);
  color: #fff;
  font-size: 18px;
  padding: 0px;
}