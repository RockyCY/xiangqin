.userinfoBG {
  /* margin-top: 0px; */
  width: 100%;
  height: 131.5px;
  background:-webkit-linear-gradient(left,#E852A4,#FF313A);
  display: flex;
  align-items: center;
}
.userinfoDescBG{
   width: 50%;
   margin-left: 35.5px;
   margin-top: 15px;
   height: 116.5px;
   background:transparent;
   display: flex;
   flex-direction: column;
   align-items: left;
   color: #fff;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}
.userinfo-avatar {
  overflow: hidden;
  margin-left: 28px;
  width: 82px;
  height: 82px;
  border-radius: 50%;
}

.avatar {
  overflow: hidden;
  width: 82px;
  height: 82px;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 26px;
  color: #fff;
  /* font-weight: bold; */
}

.userinfo-id {
  font-size: 18px;
  color: #fff;
}

.redlineNumBG {
  margin-top: 13px;
  height: 22.5px;
  display: flex;
  align-items: center;
}

.redlineImg {
  width: 31.5px;
  height: 22.5px;
}

.redlineText {
  margin-left: 3.5px;
  font-size: 18px;
  color: #fff;
}

.redlineMore {
  margin-left: 11px;
  font-size: 16px;
  color: #2407fb;
}