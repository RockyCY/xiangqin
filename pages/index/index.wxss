
.normalbutton {
  width: 100px;
  height: 50px;
  line-height: 50px;
  border-radius:25px;
  text-align:center;
  padding: 0px;
  background:-webkit-linear-gradient(left,#E852A4,#FF313A);
  color: #fff;
  font-size: 18pt;
}

.floatViewBG{
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background-color: transparent;
  z-index: 999;
}
.coverViewBG{
  position: absolute;
  width: 100%;
  height: 100%;
  background:#000000;
  opacity: 0.75;
}

.dislikeViewBG {
  position: absolute;
  height: 500px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  opacity: 1;
  background-color: #fff;
  border: 1px solid transparent;
  border-radius: 22px 22px 0px 0px;
}

.dislikeViewTopTitle {
  position: absolute;
  top: 40px;
  width: 100%;
  overflow-wrap: break-word;
  color: rgba(71,71,71,1);
  font-size: 60rpx;
  font-family: PingFangSC-Semibold;
  text-align: center;
  white-space: nowrap;
  line-height: 28rpx;
  align-self: center;
}

.reasonViewBG {
  position: absolute;
  top: 70px;
  height: 360px;
  width: 300px;
  display: flex;
  background:#ffffff;
  flex-wrap: wrap;
}